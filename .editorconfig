root = true

[*]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[*.{js,json}]
charset = utf-8

# 4 space indentation
[*.js]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 110

[*.json]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 110
